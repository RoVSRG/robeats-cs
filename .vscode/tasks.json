{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Two-Way Sync (Full Rojo)",
      "type": "shell",
      "command": "lune",
      "args": ["run", "scripts/sync-launcher.luau"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1,
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Rojo Serve Only",
      "type": "shell",
      "command": "rojo",
      "args": ["serve", "default.project.json"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Studio Watcher Only",
      "type": "shell",
      "command": "lune",
      "args": ["run", "scripts/studio-watcher.luau"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
