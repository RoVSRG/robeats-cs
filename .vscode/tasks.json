{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rojo serve",
      "type": "shell",
      "command": "rojo",
      "args": ["serve", "${workspaceFolder}/default.project.json"],
      "options": {
        "env": {
          "PATH": "${workspaceFolder}/tools/bin:${env:PATH}"
        }
      },
      "windows": {
        "options": {
          "env": {
            "PATH": "${workspaceFolder}\\tools\\bin;${env:PATH}"
          }
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1,
        "runOn": "folderOpen"
      }
    }
  ]
}
