{
  "name": "sdk",
  "sourceRoot": "packages/sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["generate"],
      "options": {
        "command": "echo 'SDK generated successfully'",
        "cwd": "packages/sdk"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install",
        "cwd": "packages/sdk"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx openapi-typescript http://localhost:3000/docs/json -o ./packages/sdk/types.d.ts && npm run generate -w packages/sdk",
        "cwd": "."
      }
    }
  },
  "tags": ["scope:sdk", "type:library"]
}