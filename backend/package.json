{
  "name": "robeats-cs-transactor",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run services:up && npm run prisma:migrate && npm run prisma:generate && tsx watch src/index.ts",
    "services:up": "docker compose up -d db valkey && echo 'Waiting for DB...' && node -e \"setTimeout(() => {}, 5000)\"",
    "services:down": "docker compose down",
    "services:restart": "docker compose up -d --build --force-recreate",
    "prisma:generate": "prisma --config prisma.config.ts generate",
    "prisma:migrate": "npx prisma --config prisma.config.ts migrate deploy",
    "prisma:studio": "npx prisma --config prisma.config.ts studio",
    "build": "npm run prisma:generate && tsc -b",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts,.js --fix",
    "lint:check": "eslint src --ext .ts,.js",
    "test": "echo \"Warning: no tests specified\" && exit 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "imports": {
    "#prisma": "./generated/prisma/index.js",
    "#prisma/*": "./generated/prisma/*.js"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@sinclair/typebox": "^0.34.40",
    "dotenv": "^17.2.3",
    "fastify": "^5.4.0",
    "handlebars": "^4.7.8",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@types/pg": "^8.15.5",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "prisma": "^7.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}