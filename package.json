{
  "name": "robeats-cs",
  "version": "2.0.0",
  "description": "RoBeats Community Server - Simplified",
  "scripts": {
    "build": "node -e \"require('fs').mkdirSync('dist', {recursive: true})\" && .\\tools\\rojo.cmd build default.project.json --output dist/robeats-cs.rbxl",
    "serve": ".\\tools\\rojo.cmd serve default.project.json",
    "build:songs": ".\\tools\\lune.cmd run songs/build",
    "clean": "rimraf dist",
    "songs:build-rbx": "tsx songs/build.ts",
    "songs:build": "npm run songs:build-rbx",
    "dev": "npm run infra:up && npm run prisma:generate && tsx watch backend/src/index.ts",
    "download-types": "curl -o roblox.d.luau https://raw.githubusercontent.com/JohnnyMorganz/luau-lsp/refs/heads/main/scripts/globalTypes.d.luau",
    "lint": "rojo sourcemap && luau-lsp analyze --defs=roblox.d.luau src"
  },
  "workspaces": [
    "backend"
  ],
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/pako": "^2.0.4",
    "concurrently": "^8.2.2",
    "js-yaml": "^4.1.1",
    "osu-parsers": "^4.1.7",
    "pako": "^2.1.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.6"
  },
  "author": "RoBeats Community",
  "license": "MIT"
}
