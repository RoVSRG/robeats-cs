{
  "name": "game",
  "sourceRoot": "packages/game",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "mkdir -p dist && rojo build default.project.json --output dist/robeats-cs.rbxl",
        "cwd": "."
      },
      "outputs": ["{workspaceRoot}/dist"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "rojo serve default.project.json",
        "cwd": "."
      }
    },
    "sync": {
      "executor": "nx:run-commands",
      "options": {
        "command": "lune run scripts/studio-watcher.luau",
        "cwd": "."
      }
    }
  },
  "tags": ["scope:game", "type:application"]
}